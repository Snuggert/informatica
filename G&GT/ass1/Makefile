#clear&set our suffixes
.SUFFIXES:
.SUFFIXES: .c .o #.cpp

CC=gcc
CFLAGS= -W -Wall -Werror -std=c99 -pedantic-errors
LDFLAGS= -lm -lGL
#SOURCES=$(shell ls *.c *.c??)

all: test

test: test.o
	$(CC) -o test test.o $(CFLAGS) $(LDFLAGS)

test.o: test.c
	$(CC) $(CFLAGS) -c -o test.o test.c

#this one also removes backup files generated by Emacs
realclean: clean
	rm -f *~

#`normal' clean
clean: realclean
	rm -f *.o
	rm -f test